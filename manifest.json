{
  "manifest_version": 3,
  "name": "X Reply Assistant",
  "version": "0.1.0",
  "description": "Generates reply suggestions for X posts using OpenRouter.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite" 
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "default_title": "X Reply Assistant Settings"
  }
}
